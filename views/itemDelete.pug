extends layout

block content
  h1 Item: #{item.title}
  p Description: #{item.description}

  p #[strong Do you really want to delete this Item?]
  
  form(method="POST" action="")
    .form-group 
      input#itemid.form-control(type="hidden", name="itemid", required="true", value=item._id)
    .form-group 
      label(for="password") Admin password 
      input#password.form-control(type="password", name="password", value='', required="true") 
    
    button.btn.btn-primary(type="submit") Delete

  if errors
      ul
        for error in errors
          li!= error.msg