extends layout

block content
  h1 #{title}

  form(action="" method="POST") 
    .form-group 
      label(for="title") Title
      input#title.form-control(type="text", name="title", value=(undefined===category ? "" : category.title), required="true") 
    .form-group 
      label(for="description") Description 
      input#description.form-control(type="textarea", name="description", value=(undefined===category ? "" : category.description), required="true") 
    button.btn.btn-primary Submit

  if errors
    ul
      for error in errors
        li!= error.msg