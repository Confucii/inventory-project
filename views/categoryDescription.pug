extends layout

block content
  h1 Category: #{category.title}
  p Description: #{category.description}

  .items 
    each item in items
      hr
      h4 Item: 
        a(href=item.url) #{item.title}
      p Rarity: 
        if (item.rarity === 'Rare')
          span.blue Rare
        else if (item.rarity === 'Epic')
          span.purple Epic
        else if (item.rarity === 'Legendary')
          span.orange Legendary
        else 
          span Common
      p Price: #{item.price}; Stock: #{item.inStock}
      p Description: #{item.description}

  p
    a(href=category.url+'/update') Update category
  p
    a(href=category.url+'/delete') Delete category
  